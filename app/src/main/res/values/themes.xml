<resources>

    <style name="Base.Theme.MasterChef" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/lighter_blue</item>
    </style>

    <style name="Theme.MasterChef" parent="Base.Theme.MasterChef">
        <!--        <item name="android:navigationBarColor">@android:color/transparent</item>-->
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/lighter_blue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MasterChef.onBoarding" parent="Base.Theme.MasterChef">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.MasterChef.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/light_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_progress</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MasterChef</item>
    </style>


    <style name="Button.White" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_white_corners</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Button.Black" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_black_corners</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Button.Purple" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_purple_corners</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Button.Blue" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_blue_corners</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>