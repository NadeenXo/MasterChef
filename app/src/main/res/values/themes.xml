<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MasterChef" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MasterChef" parent="Base.Theme.MasterChef">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MasterChef.onBoarding" parent="Base.Theme.MasterChef">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.MasterChef.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/light_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_progress</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MasterChef</item>
    </style>


    <style name="Button.White" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_white_radius_corners</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Button.Black" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_black_radius_corners</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Button.Purple" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_purple_radius_corners</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>