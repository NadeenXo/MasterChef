<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meal_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/shape_card_white">

    <ImageView
        android:id="@+id/iv_meal"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/shape_card_blain"
        android:contentDescription="@string/meal_name"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_meal_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_card_name"
        android:fontFamily="casual"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_meal"
        app:layout_constraintStart_toStartOf="@+id/iv_meal"
        app:layout_constraintTop_toBottomOf="@+id/iv_meal"
        tools:text="@string/meal_name" />

    <ImageView
        android:id="@+id/iv_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:cropToPadding="true"
        app:layout_constraintEnd_toEndOf="@+id/iv_meal"
        app:layout_constraintTop_toTopOf="@+id/iv_meal"
        app:srcCompat="@drawable/ic_heart" />
</androidx.constraintlayout.widget.ConstraintLayout>