<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/shape_card_white"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_meal_fav_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/meal_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_meal_name_fav_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="2dp"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_meal_fav_item"
        app:layout_constraintEnd_toStartOf="@+id/delete_iv_fav_item"
        app:layout_constraintStart_toEndOf="@+id/iv_meal_fav_item"
        app:layout_constraintTop_toTopOf="@+id/iv_meal_fav_item"
        tools:text="@string/meal_name" />

    <ImageView
        android:id="@+id/delete_iv_fav_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_trash"
        app:layout_constraintBottom_toBottomOf="@+id/tv_meal_name_fav_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_meal_name_fav_item" />
</androidx.constraintlayout.widget.ConstraintLayout>